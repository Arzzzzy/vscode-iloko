{
  "name": "iloko",
  "displayName": "Iloko Programming Language Support",
  "icon": "ilokoicon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arzzzzy/vscode-iloko.git"
  },
  "description": "VS Code support for the Iloko programming language (run .iloko files using iloko-cli or venv)",
  "version": "0.0.11",
  "publisher": "ChristianAndreiArzadon",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:iloko",
    "onCommand:iloko.runFile"
  ],
  "main": "./out/extension.js",
  "contributes": {
      "languages": [
        {
          "id": "iloko",
          "aliases": ["Iloko", "iloko"],
          "extensions": [".iloko"],
          "configuration": "./language-configuration.json",

          "icon": {
            "light": "ilokolangicon.svg",
            "dark": "ilokolangicon.svg"
          }
        }
      ],
    "grammars": [
      {
        "language": "iloko",
        "scopeName": "source.iloko",
        "path": "./syntaxes/iloko.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "iloko.runFile",
        "title": "Run Iloko"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "iloko.runFile",
          "when": "resourceLangId == iloko",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "iloko.runFile",
          "when": "resourceExtname == .iloko",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "iloko.runFile",
          "when": "resourceLangId == iloko"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
